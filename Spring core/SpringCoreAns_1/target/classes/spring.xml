<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-4.0.xsd">
  
  <context:component-scan base-package="springcore.SpringCoreAns_1"></context:component-scan>
  
  <bean id="customer" class="springcore.SpringCoreAns_1.Customer">
     <property name="customerId" value="007"></property>
     <property name="customerName" value="Tarun Krishna Khunteta"></property>
     <property name="customerContact" value="9461030478"></property>
     
  </bean>
  
  <bean id="address" class="springcore.SpringCoreAns_1.Address">
     <property name="street" value="Brahmpuri"></property>
     <property name="city" value="Jaipur"></property>
     <property name="state" value="Rajasthan"></property>
     <property name="zip" value="302002"></property>
     <property name="country" value="India"></property>
  </bean>
  
  
  
</beans>